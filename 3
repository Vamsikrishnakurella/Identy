import cv2
print("enter location of image")
text=input()

img =cv2.imread(text)
height, width=  img.shape[:2]
h = int(height/2)
arr=np.array(img)
patch=arr[0:h/2,0:width]
patch2=arr[h/2:height,0:width]

#converting patch1 to greyscale
grey = cv2.cvtColor(patch,cv2.COLOR_BGR2GRAY)

#concatinating patch1 and patch2
vis=np.concatenate((patch1,patch2),axis=0)

cv2.imwrite("image.jpg",vis)
